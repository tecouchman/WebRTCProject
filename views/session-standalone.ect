<!-- session-standalone includes html and head tags so that it can be viewed as a standalone page -->
<!DOCTYPE html en>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="initial-scale=1">
        <% for style in @styles : %>
            <% include 'partials/style', { 'style': style } %>
        <% end %>
    </head>
    <body class="standalone">
        <% content %>
    </body>
</html>
