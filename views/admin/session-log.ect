<% extend 'admin/layout' %>
    
<button type="submit" class="delete-button button-red image-button" data-id="<%= @sessionId %>" style="float: right;"><span>Clear Log</span> <img src="/images/icons/delete-white.png"></button>
<h1>Messages</h1>
<ul id="session-list" class="list">
    <p class="info <% if @messages && @messages.length > 0 : %>hidden<%end%>">This log is empty</p>
    <% if @messages : %>
        <% for message in @messages : %>
                <li>
                    <span class="log-timestamp"><%= message.sentAt.toJSON().slice(0, 19).replace('T',' ') %></span><span class="log-username"> <%= message.userName %>:</span> <span class="message"><%- message.message %></span>
                </li>
        <% end %>
    <% end %>
</ul>